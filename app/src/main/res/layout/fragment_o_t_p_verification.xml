<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.register.OTPVerificationFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/registerClose"
        android:layout_margin="20sp"
        android:src="@drawable/ic_arrow_left"
        app:tint="#969696"
        android:contentDescription="@string/icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerClose"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20sp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/registerInTitle"
        android:text="@string/otp_verification"
        android:layout_marginStart="20sp"
        tools:ignore="UnknownIdInLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerInTitle"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the 6-digit code sent to you at"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+265 880 28 56 92"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginLeft="10dp"
                android:textColor="#039BE5"
                />
        </LinearLayout>

        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:height="40dp"
            app:width="40dp"
            app:bar_enabled="true"
            app:bar_height="2dp"
            app:length="6"
            app:hide_otp="false"
            android:layout_gravity="center"
            app:otp_text_size="27dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:text="@string/verify"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend_code_in_02_59"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/resendTimer"
            />
    </LinearLayout>

    </RelativeLayout>

</layout>